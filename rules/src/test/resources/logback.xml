<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601,UTC} [%highlight(%-5p)] [%-40.40t] [%-30.30c{25}] [%mdc] - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="com.jive" level="TRACE" />

  <root level="INFO">
    <appender-ref ref="stdout" />
  </root>
</configuration>
